{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global",
    "description": "Define global settings"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "gtmId": {
      "type": "string",
      "required": false
    },
    "googleAnalytics": {
      "type": "string", 
      "required": false
    },
    "yandexMetrika": {
      "type": "string",
      "required": false
    },
    "facebookPixel": {
      "type": "string",
      "required": false
    },
    "robots": {
      "type": "text",
      "required": false,
      "default": "User-agent: *\nDisallow:"
    },
    "schema": {
      "type": "json",
      "required": false
    },
    "social": {
      "type": "json",
      "required": false
    },
    "domain": {
      "type": "string",
      "required": false
    }
  }
